<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<!-- alias설정 -->
	<typeAliases>
	<!-- type : 해당패키지, alias : 별칭 show -->
		<typeAlias type="com.tis.myapp.biz.show.ShowVO" alias="show"/>  
	</typeAliases>


	

	<!-- 이 데이터베이스에서 사용할 쿼리문을 맵핑해줘야함    쿼리문이작성된 xml파일을 맵핑 -->

	<mappers>
		<mapper resource="mappings/show-mapping.xml"/>
	</mappers>
</configuration> 